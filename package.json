{
  "name": "asuncion-backend",
  "version": "1.0.1",
  "description": "Aplicación backend con microservicios para la gestión de procesos y actividades relacionadas al sistema BSC.",
  "author": "BID",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:microservices": "concurrently \"nest build ms-administracion\" \"nest build ms-autorizacion\"",
    "build:gateway": "nest build api-gateway",
    "build:all": "concurrently \"npm run build:gateway\" \"npm run build:microservices\"",
    "start:prod:all": "pm2 start pm2.json",
    "start:prod:gateway": "pm2 start pm2.json --env production --only api-gateway",
    "start:prod:microservices": "concurrently \"pm2 start pm2.json --env production --only ms-administracion\" \"pm2 start pm2.json --env production --only ms-autorizacion\"",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api-gateway/test/jest-e2e.json"
  },
  "dependencies": {
    "@dynamic-mapper/mapper": "^1.10.2",
    "@nestjs/apollo": "^10.0.17",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^10.0.16",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^1.2.0",
    "@nestjs/microservices": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "apollo-server-express": "^3.5.0",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "concurrently": "^7.6.0",
    "date-fns": "^2.30.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.8.0",
    "graphql-fields-list": "^2.2.4",
    "graphql-relay": "^0.9.0",
    "helmet": "^7.0.0",
    "joi": "^17.5.0",
    "locutus": "^2.0.15",
    "module-alias": "^2.2.2",
    "moment": "^2.29.4",
    "mongodb": "^6.5.0",
    "nestjs-pino": "^3.1.2",
    "nestjs-soap": "^3.0.2",
    "oracledb": "^5.5.0",
    "pg": "^8.11.3",
    "pino-http": "^8.3.1",
    "pino-pretty": "^9.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.1",
    "soap": "^0.45.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.3",
    "@types/compression": "^1.7.2",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.3",
    "@types/locutus": "^0.0.6",
    "@types/node": "18.16.12",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.6.2",
    "jest-html-reporters": "^3.1.4",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./unit-test-report",
          "filename": "index.html",
          "openReport": true
        }
      ]
    ],
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@bsc/core(|/.*)$": "<rootDir>/libs/core/src/$1"
    }
  }
}
